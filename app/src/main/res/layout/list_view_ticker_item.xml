<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ticker_item_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_ticker_image_have"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="还有"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ticker_image_days"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="几天"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_ticker_item_title"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="test"
            android:textSize="22dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_ticker_item_date"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:text="test"
            android:textSize="12dp"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/tv_ticker_item_remark"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="test"
            android:textSize="12dp"
            android:textColor="#555555"/>

    </LinearLayout>

</LinearLayout>